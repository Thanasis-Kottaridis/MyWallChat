<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ChatItemUserImage"
            android:layout_alignParentStart="true"
            android:src="@mipmap/ic_launcher_round"/>

        <TextView
        android:id="@+id/ChatItemUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ChatItemUserImage"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/ChatItemUserImage"
        android:layout_toRightOf="@+id/ChatItemUserImage"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Username:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/ChatItemMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ChatItemUsername"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/ChatItemUserImage"
            android:layout_toRightOf="@+id/ChatItemUserImage"
            android:text="message text" />

    </RelativeLayout>

</android.support.design.card.MaterialCardView>